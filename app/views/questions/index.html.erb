<h1>投稿された質問一覧</h1>

<%= will_paginate %>

<ul class="questions">
  <% @questions.each do |question| %>
   <li id=question-<%= question.id %>">
  <span class = "title"><%= link_to question.title , question_path(question) %></span>
  <span class="content"><%= question.content.truncate(100) %></span>
  <span class="timestamp">
     <%= time_ago_in_words(question.created_at) %> 前に投稿されました。
     <span class="question">
    <%= link_to '続きを読む', question_path(question) %>
  </span>
  </span>
  </li>
   <% end %>
</ul>

<%= will_paginate %>